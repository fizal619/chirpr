<h1>Feed</h1>

<form action="/posts" method="POST">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <p> Title: </p>
  <input name="title">
  <p> Body: </p>
  <textarea name="body"> </textarea>
  <p> User: </p>
  <input name="user_id" type="number">
  <br>
  <button>Submit</button>
</form>


<div>
  <% @posts.each do |post| %>
    <h2> <%= post.title %> </h2>
    <p> <%= post.body %> </p>
    <a href="/post/<%= post.id %>">DELETE </a>
    <p> <b> Post by <%= post.user.username %> </b> </p>
  <% end %>
</div>